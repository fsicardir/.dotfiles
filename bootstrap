#!/usr/bin/env bash

usage() {
    printf "Usage:\n"
    printf "\t%s [options]\n" $0
    printf "Options:\n"
    printf "\t-h\tdisplays this message\n"
    printf "\t-r\tfetch from remote repo\n"
    printf "\t-b\tfull build (YouCompleteMe)\n"
    printf "\t-d\tchange destination (default is \$HOME)\n"
}

fetch_remote() {
    git pull origin master
    git submodule update --init --recursive
}

build() {
    python3 ~/.vim/pack/plugins/start/YouCompleteMe/install.py \
        --clangd-completer \
        --ts-completer \
        --rust-completer \
        --java-completer
}

bootstrap() {
    SRC=$1
    DEST=$2
    rsync --exclude ".git" \
        --exclude ".gitmodules" \
        --exclude ".gitignore" \
        --exclude ".gitconfig.user.template" \
        --exclude "README.md" \
        --exclude "bootstrap" \
        -ah "$SRC/" "$DEST"
}

OPTERR=0
REMOTE=false
BUILD=false
SRC="$(dirname "$BASH_SOURCE")"
DEST="$HOME"

while getopts "rbd:h" o; do
    case "$o" in
        r)
            REMOTE=true
            ;;
        b)
            BUILD=true
            ;;
        d)
            DEST=$OPTARG
            ;;
        h|*)
            usage
            [ h == "$o" ]
            exit $?
            ;;
    esac
done

$REMOTE && fetch_remote
$BUILD && build

bootstrap $SRC $DEST

exit 0
