#!/usr/bin/env bash

if [[ "$#" != 1 ]]; then
    echo -e "Usage:\n\t$0 [all/selection/focused]"
    exit 1
fi

DIR="$HOME/Pictures/screenshots"

OPTIONS=""
case "$1" in
    a|all)
        OPTIONS="-m"
        ;;
    s|sel|selection)
        sleep 0.2
        OPTIONS="-s"
        ;;
    f|focused)
        OPTIONS="-ub"
        ;;
esac

if scrot $OPTIONS -e "mv \$f $DIR"; then
    message="ï€¾ New screenshot saved in
    $DIR"
    notify-send "Screenshot" "$message"
fi
